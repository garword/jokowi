generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model EmailRouting {
  id           String   @id @default(cuid())
  zoneId       String
  zoneName     String
  aliasPart    String
  fullEmail    String
  ruleId       String   @unique // UUID from Cloudflare API
  destination  String
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("email_routing")
}